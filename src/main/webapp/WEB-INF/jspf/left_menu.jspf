<%@ page contentType="text/html;charset=UTF-8" language="java" pageEncoding="UTF-8" isELIgnored="false" %>
<div class="sidebar1">
    <h4>Жанры:</h4>
    <ul class="nav">
        <li><a href="/books">Все книги</a></li>
        <c:forEach var="genre" items="${genreList}">
            <c:choose>
                <c:when test="${genreId !=0 && genreId == genre.id}">
                <%--<c:when test="${! empty genreId}">--%>
                    <li><a style="color:red;" href="/books?genre_id=${genre.id}">${genre.name}</a></li>
                </c:when>
                <c:otherwise>
                    <li><a href="<c:url value='/books?genre_id=${genre.id}'/>">${genre.name}</a></li>
                </c:otherwise>
            </c:choose>
        </c:forEach>
    </ul>
</div>
